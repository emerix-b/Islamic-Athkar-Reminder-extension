{
    "manifest_version": 2,
    "name": "Islamic Athkar Reminder",
    "version": "1.0",
    "description": "Receive Islamic athkar reminders at specified intervals.",
    "permissions": ["storage", "notifications", "alarms"],
    "browser_action": {
      "default_icon": {
        "16": "16.png",
        "48": "48.png",
        "128": "128.png"
      },
      "default_title": "Islamic Athkar Reminder",
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "16.png",
      "48": "48.png",
      "128": "128.png"
    }
    ,
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }
  
  